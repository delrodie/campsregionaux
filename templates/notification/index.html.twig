<a class="nav-link dropdown-toggle arrow-none waves-effect" data-toggle="dropdown" href="#" role="button"
   aria-haspopup="false" aria-expanded="false">
    <i class="ti-bell noti-icon"></i>
    <span class="badge badge-success a-animate-blink noti-icon-badge">{{ nombre }}</span>
</a>
<div class="dropdown-menu dropdown-menu-right dropdown-arrow dropdown-menu-lg">
    <div class="dropdown-item noti-title">
        <h5><span class="badge badge-danger float-right">{{ nombre }}</span>Notification</h5>
    </div>

    {% for liste in listes|slice(0,3) %}
        <a href="javascript:void(0);" class="dropdown-item notify-item">
            <div class="notify-icon {% if liste.statut =="00"  %} bg-success{% else %} bg-danger {% endif %}"><i class="mdi mdi-account"></i></div>
            <p class="notify-details">
                <b>{{liste.nom|title }} {{ liste.prenom|title }}</b>
                <small class="text-muted">{{ liste.fonction }}</small>
            </p>
        </a>
    {% endfor %}


    <a href="javascript:void(0);" class="dropdown-item notify-item">
        Voir plus
    </a>

</div>