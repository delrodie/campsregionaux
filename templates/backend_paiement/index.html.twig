{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Liste des inscriptions {{ statut }} {% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="container-fluid">

            <div class="row">
                <div class="col-sm-12 mt-5">
                    <div class="page-title-box">
                        <h4 class="page-title">LISTE DES INSCRIPTIONS {{ statut|upper }}</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <h5 class="header-title mb-3 mt-0 text-center">Les inscriptions {{ statut }}</h5>
                            <div class="table-responsive mt-5">
                                <table id="liste" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                    <tr>
                                        <th class="border-top-0 text-center">#</th>
                                        <th class="border-top-0 text-center">DISTRICT</th>
                                        <th class="border-top-0 text-center">MATRICULE</th>
                                        <th class="border-top-0 text-center">NOM & PRENOMS</th>
                                        <th class="border-top-0 text-center">FONCTION</th>
                                        <th class="border-top-0 text-center">TEL PAIMENT</th>
                                        <th class="border-top-0 text-center">ID TRANSACTIONS</th>
                                        <th class="border-top-0 text-center">STATUT</th>
                                        <th class="border-top-0 text-center">DATE</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for liste in listes %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td>{{ liste.district }}</td>
                                            <td class="text-center">{{ liste.matricule }}</td>
                                            <td>{{ liste.nom|upper }} {{ liste.prenom|title }}</td>
                                            <td>{{ liste.fonction }}</td>
                                            <td class="text-center">{{ liste.paieTelephone ? liste.paieTelephone : '-' }}</td>
                                            <td class="text-center">
                                                {% if liste.statusPaiement != 'VALID' %}
                                                    <a href="{{ path('backend_paiement_show', {'idTransaction': liste.idTransaction, 'region': liste.region, 'regionId': liste.regionId}) }}" target="_blank">{{ liste.idTransaction }}</a>
                                                {% else %}
                                                    {{ liste.idTransaction }}
                                                {% endif %}

                                            </td>
                                            <td class="text-center">
                                                {% if liste.statusPaiement == 'VALID' %} <span class="badge badge-success">VALIDEE</span>
                                                {% else %} <span class="badge badge-danger">INACHEVEE</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">{{ liste.created|date('Y-m-d H:i:s') }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jq-3.3.1/dt-1.10.25/b-1.7.1/b-html5-1.7.1/datatables.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jq-3.3.1/jszip-2.5.0/dt-1.10.25/b-1.7.1/b-colvis-1.7.1/b-html5-1.7.1/b-print-1.7.1/datatables.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#liste').DataTable({
                //"ajax": ,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                },
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ]
            });
        } );
    </script>
{% endblock %}