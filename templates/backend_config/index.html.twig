{% extends 'base.html.twig' %}

{% block title %}Config index{% endblock %}

{% block body %}
    <h1>Config index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Apikey</th>
                <th>SiteId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for config in configs %}
            <tr>
                <td>{{ config.id }}</td>
                <td>{{ config.apikey }}</td>
                <td>{{ config.siteId }}</td>
                <td>
                    <a href="{{ path('backend_config_show', {'id': config.id}) }}">show</a>
                    <a href="{{ path('backend_config_edit', {'id': config.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_config_new') }}">Create new</a>
{% endblock %}
